<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- -->
<mapper namespace="canreverse">
	<select id="subjectInfo" parameterType="Dto" resultType="Dto">
		SELECT
			name_   AS subject
		FROM
			fc_financial_category
		<where>
			<if test="type_ != null ">
				type_ = #{type_}  <!-- 表示哪条业务线 -->
			</if>

		</where>
	</select>

	<select id="cutInfo" parameterType="Dto" resultType="Dto">
		SELECT
			name_   AS cut
		FROM
			fc_financial_category
		<where>
			<if test="type_ != null ">
				type_ = #{type_}  <!-- 表示哪条业务线 -->
			</if>

		</where>
	</select>



</mapper>