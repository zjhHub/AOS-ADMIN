<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="alarmappartusEngine" class="com.chinazyjr.fc.modules.alarm.AlarmApparatusEngine"></bean>
	<bean id="sendAlamMessageTask" class="com.chinazyjr.fc.modules.alarm.SendAlamMessageTask"></bean>

	<!-- 短信发送功能 -->
	<bean id="dealSendAlamMessageTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="sendAlamMessageTask" />
		</property>
		<property name="targetMethod">
			<value>task</value>
		</property>
	</bean>
	
	<!-- 短信发送功能 每5分钟一次 -->
	<bean id="dealSendAlamMessageTaskOrder" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="dealSendAlamMessageTask" />
		</property>
		<property name="cronExpression">
			<value>0 0/1 * * * ?</value>
		</property>
	</bean>

	<!-- 扣款 -->
	<bean id="dealPayOrder" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="alarmappartusEngine" />
		</property>
		<property name="targetMethod">
			<value>dealPayAlarm</value>
		</property>
	</bean>

	<!-- 定时  划扣警报器 -->
	<bean id="taskDealPayOrder" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="dealPayOrder" />
		</property>
		<property name="cronExpression">
			<value>0 0/5 * * * ?</value>
		</property>
	</bean>
	
	<!-- 放款 -->
	<bean id="dealLoanOrder" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="alarmappartusEngine" />
		</property>
		<property name="targetMethod">
			<value>dealLoanAlarm</value>
		</property>
	</bean>

	<!-- 定时 放款警报器 -->
	<bean id="taskDealLoanOrder" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="dealLoanOrder" />
		</property>
		<property name="cronExpression">
			<value>0 0/5 * * * ?</value>
		</property>
	</bean>

	<!-- 启动触发器的配置开始 -->
	<bean name="startQuertzAlarmapparatus" lazy-init="false" autowire="no" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- <ref bean="taskDealPayOrder" />
		     	<ref bean="taskDealLoanOrder" />
		     	<ref bean="dealSendAlamMessageTaskOrder" /> -->
			</list>
		</property>
	</bean>

</beans>