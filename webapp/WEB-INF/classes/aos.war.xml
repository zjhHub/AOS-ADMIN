<?xml version="1.0" encoding="UTF-8"?>

<!-- AOS Web应用打包脚本：生产环境下部署Web应用请执行此脚本输出war包 -->
<project name="aos.fc" default="4.PACKAGE" basedir="../../">

	<!-- 初始化 -->
	<target name="1.INIT">
		<echo message="启动AOS Web应用打包程序..." />
		<property name="name" value="fc" />
		<property name="src.resources" value="${basedir}/src/resources" />
		<property name="src.dao" value="${basedir}/src/dao/java" />
		<property name="src.framework" value="${basedir}/src/framework/java" />
		<property name="src.system" value="${basedir}/src/system/java" />
		<property name="src.project" value="${basedir}/src/project/java" />
		<property name="webapp" value="${basedir}/webapp" />
		<property name="dist" value="${basedir}/dist" />
		<property name="dist.src" value="${basedir}/dist/src" />
		<property name="dist.bin" value="${basedir}/dist/bin" />
		<property name="dist.classes" value="${basedir}/dist/bin/WEB-INF/classes" />
	</target>

	<!-- 复制打包资源 -->
	<target name="2.RESOURCE" depends="1.INIT">
		<echo message="清理打包环境..." />
		<delete dir="${dist}" />
		<echo message="复制打包资源..." />
		<copy todir="${dist.src}">
			<fileset dir="${src.resources}" />
			<fileset dir="${src.dao}" />
			<fileset dir="${src.framework}" />
			<fileset dir="${src.system}" />
			<fileset dir="${src.project}" />
		</copy>
		<copy todir="${dist.bin}">
			<fileset dir="${webapp}">
				<exclude name="WEB-INF/classes/**" />
				<exclude name="WEB-INF/lib/**" />
			</fileset>
		</copy>
		<copy todir="${dist.classes}">
			<fileset dir="${src.resources}" />
		</copy>
		<!-- 复制隐藏在java包里的一些资源文件 -->
		<copy todir="${dist.classes}">
			<fileset dir="${src.dao}">
				<exclude name="**/*.java" />
			</fileset>
			<fileset dir="${src.framework}">
				<exclude name="**/*.java" />
			</fileset>
			<fileset dir="${src.system}">
				 <exclude name="**/*.java" />
			</fileset>
			<fileset dir="${src.project}">
				 <exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy todir="${dist.bin}/WEB-INF/lib">
			<fileset dir="${webapp}/WEB-INF/lib" includes="*.jar" />
			<fileset dir="${webapp}/WEB-INF/lib/commons" includes="*.jar" />
			<fileset dir="${webapp}/WEB-INF/lib/jdbc" includes="*.jar" />
			<fileset dir="${webapp}/WEB-INF/lib/spring" includes="*.jar" />
			<fileset dir="${webapp}/WEB-INF/lib/kuaijiet" includes="*.jar" />
		</copy>
	</target>

	<!-- 编译 -->
	<target name="3.COMPILE" depends="2.RESOURCE" >
		<echo message="编译开始..." />
		<javac srcdir="${dist.src}" destdir="${dist.classes}" target="1.7" source="1.7" encoding="utf-8" debug="true" debuglevel="lines,vars,source" includeantruntime="on" listfiles="false">
			<!-- <compilerarg value="-Xlint:unchecked"/> -->
			<classpath>
				<fileset dir="${webapp}/WEB-INF/lib">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
			<compilerarg value="-XDignore.symbol.file"/>

		</javac>
		<echo message="编译完成。如有警告提示可忽略。" />
	</target>

	<!-- 打war包 -->
	<target name="4.PACKAGE" depends="3.COMPILE">
		<echo message="输出war包..." />
		<war warfile="${dist}/${name}.war" webxml="${dist.bin}/WEB-INF/web.xml">
			<fileset dir="${dist.bin}" />
		</war>
		<echo message="清理临时缓存..." />
		<delete dir="${dist.bin}" />
		<delete dir="${dist.src}" />
		<echo message="打包完成。[保存路径见上面的输出war包信息]" />
		<echo message="你可将其部署到Weblogic、Websphere、JBoss、Tomcat、Jetty等容器中。Good Luck!" />
	</target>


</project>